<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="ClamGraphBuildMenu">
        <ui:VisualElement name="ScoringFunctions" style="flex-direction: row;">
            <ui:Label text="Scoring Function" display-tooltip-when-elided="true" name="ScoringFunctionLabel" style="justify-content: center; align-items: center; -unity-text-align: middle-left; width: 35%;" />
            <ui:DropdownField index="0" name="ScoringFunctionSelector" style="flex-grow: 1;" />
        </ui:VisualElement>
        <ui:VisualElement style="flex-direction: row;">
            <ui:Label text="Min Depth" display-tooltip-when-elided="true" name="MinDepthLabel" style="-unity-text-align: middle-left; width: 35%;" />
            <ui:TextField picking-mode="Ignore" value="4" text="4&#x9;" name="GraphMinDepth" password="false" style="flex-grow: 1;" />
        </ui:VisualElement>
        <ui:VisualElement name="EdgeScalerContainer" style="flex-direction: row;">
            <ui:Label text="Edge Scale" display-tooltip-when-elided="true" name="EdgeScalerLabel" style="width: 30%;" />
